#!/usr/bin/env php
<?php

$baseAutoloader = __DIR__."/vendor/autoload.php";
if (file_exists($baseAutoloader)) {
    require_once($baseAutoloader);
} else {
    // Otherwise, we're probably included via require-dev
    require_once("vendor/autoload.php");
}

$application = new \Symfony\Component\Console\Application("Pharmacist", "1.0");
$application->add(new \Lexide\Pharmacist\VerifyCommand());
$application->run();
